<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <CheckBox
        android:id="@+id/list_item_checkbox_crime_solved"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:padding="5dp"
        android:text="Checkbix">

    </CheckBox>

    <TextView
        android:id="@+id/list_item_textview_crime_titlle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/list_item_checkbox_crime_solved"
        android:padding="4dp"
        android:text="TextCiew"></TextView>

    <TextView
        android:id="@+id/list_item_textview_crime_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/list_item_textview_crime_titlle"
        android:layout_toLeftOf="@id/list_item_checkbox_crime_solved"
        android:padding="4dp"
        android:text="TextCiew"></TextView>

</RelativeLayout>